<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0DADA">

    <GridView
        android:id="@+id/cartlist"
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:layout_marginBottom="8dp"
        android:background="#E0DADA"
        android:numColumns="1"
        android:verticalSpacing="10dp"
        app:layout_constraintBottom_toTopOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.0">

    </GridView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#A9CECE"
        android:minHeight="?attr/actionBarSize"
        android:paddingEnd="0dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="63dp"
        android:background="@drawable/shape_corner_btn_commitorder"
        android:text="结算"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F2F5F7"
        android:textColorHint="#00E7E0E0"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="51dp"
        android:layout_height="33dp"
        android:layout_marginEnd="312dp"
        android:layout_marginBottom="16dp"
        android:autoSizeTextType="uniform"
        android:text="合计:"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="159dp"
        android:layout_height="60dp"
        android:layout_marginEnd="140dp"
        android:autoSizeTextType="uniform"
        android:text="￥0"
        android:textColor="#FA1403"
        android:textColorHint="#E9E0E2"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar3"
        app:layout_constraintEnd_toEndOf="@+id/toolbar3" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="#D5829D"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="购物车" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="46dp"
        android:layout_height="59dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/toolbar3"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</android.support.constraint.ConstraintLayout>